<div class="form-group">
    <label class="col-form-label">Минимальная стоимость для тиража:</label>
    <div class="form-row">
        <div class="col-1">
            <input
                type="number"
                name="{{ prefix_name }}[min_price][value]"
                value="{{ value ?? 0 }}"
                class="form-control form-control-sm types-of-pricing-rules__min-price-value"
                min="0">
        </div>
        <div class="col-4 input-group ml-3">
            {% include 'calculator/assembly/types/common/currencies' with {
                name: prefix_name ~ '[min_price][currency]',
                className: 'types-of-pricing-rules__min-price-currency',
                currency: currency
            } only %}
        </div>
    </div>
</div>
