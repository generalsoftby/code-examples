{# The modal window with the list of assemblies #}
<div class="modal fade" role="dialog" aria-hidden="true" tabindex="-1" id="modalWindowOfCalculatorsAndAssemblies">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Выбрать калькулятор и сборку</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="mt-3">
                    <label for="init-first-group">Выберите калькулятор</label>
                    <select id="selectWithCalculators" class="w-100"></select>
                </div>
                <div class="mt-3" id="containerOfSelectWithAssemblies" hidden>
                    <label for="init-first-group">Выберите сборку</label>
                    <select id="selectWithAssemblies" class="w-100"></select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Отмена</button>
                <button type="button" class="btn btn-primary" id="selectAssemblyButton">Выбрать</button>
            </div>

            {# Uses to select a loaded option #}
            <input type="hidden" class="assembly-id" value="">

            {#
                Keeps an ID of an active printed sheet to define the active printed sheet
                from the modal window
            #}
            <input type="hidden" class="printed-sheet-id" value="">
        </div>
    </div>
</div>
