<div class="mt-3">
    <h3>Дополнительные настройки:</h3>

    {# Shows an extra charge #}
    {%
        include 'calculator/assembly/types/common/extra-charge' with {
            prefixName: prefixName,
            value: extraCharge.getValue(),
            currency: extraCharge.getCurrency(),
        } only
    %}

    {# Shows a minimal price #}
    {%
        include 'calculator/assembly/types/common/min-price' with {
            prefixName: prefixName,
            value: minPrice.getValue(),
            currency: minPrice.getCurrency(),
        } only
    %}
</div>
